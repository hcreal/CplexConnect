@model IEnumerable<CplexConnect.Models.Instructor>

@{
    ViewBag.Title = "Index";
}

<h2>Instructors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstructorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsClinical)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxCourseLoad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryProgram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignCourseLoad)
        </th>
        <th colspan="2">
            Course Distribution<br />
            @Html.DisplayNameFor(model => model.CourseDist)
            @Html.DisplayNameFor(model => model.CourseDist2)
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InstructorID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsClinical)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxCourseLoad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryProgram)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignCourseLoad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseDist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseDist2)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
