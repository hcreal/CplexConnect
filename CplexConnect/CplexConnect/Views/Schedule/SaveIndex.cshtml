@model CplexConnect.Models.ScheduleViewModel
@{
    ViewBag.Title = "SaveIndex";
}

<html>
<body>
    <h2>SaveIndex</h2>
    <div>
        @{
            var check = -1;
            foreach (var i in Model.CombinedList)
            {

                if (check != i.Item2.ID)
                {
                @(i.Item2.FirstName + " " + i.Item2.LastName + "  --  ")

                    var courses = Model.CombinedList.Where(a => a.Item2.ID == i.Item2.ID).ToList();
                    foreach (var c in courses)
                    {
                    @(c.Item1.Course + ",")
                    }
                <br />
                    }
                check = i.Item2.ID;
                }

            }


    </div>
</body>
</html>
